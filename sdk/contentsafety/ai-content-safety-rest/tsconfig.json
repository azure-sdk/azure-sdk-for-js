{
  "extends": "../../../tsconfig",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "skipLibCheck": true,
    "paths": {
      "@azure-rest/ai-content-safety": [
        "./src/index"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.mts",
    "./src/**/*.cts",
    "test/**/*.ts",
    "./test/**/*.ts",
    "samples-dev/**/*.ts"
  ]
}